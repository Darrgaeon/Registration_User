form#formRegistration
    .container.form-group
        label(for="login") Login:
        input.form-control#login(
            type="text"
            name="login"
            data-regex="^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\\s).*$"
            data-check-function="isLoginInDB"
            data-status-0="Successfully"
            data-status-1="This login is taken"
            data-status-2="Login is incorrect"
        )
        span
    .container.form-group
        label(for="password") Password:
        input.form-control#password(
            type="password"
            name="password"
            data-check-function="isPasswordsAreSimilar"
            data-status-0="Successfully"
            data-status-1="Password doesn't meet the criteria"
        )
        span
    .container.form-group
        label(for="password-check") Check password:
        input.form-control#password-check(
            type="password"
            name="password-check"
            data-check-function="isPasswordsAreSimilar"
            data-status-0="Successfully"
            data-status-1="Passwords aren't the same"
        )
        span
    .container.form-group
        label(for="email") Email:
        input.form-control#email(
            type="email"
            name="email"
            data-regex="^[-\\w.]+@([A-z0-9][-A-z0-9]+\\.)+[A-z]{2,4}$"
            data-check-function="isEmailInDB"
            data-status-0="Successfully"
            data-status-1="Email is already taken"
            data-status-2="Email is incorrect"
        )
        span
    .container.panel-body
        button.btn.btn-sm.btn-primary#submit(type="submit", disabled="true") Save
